<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_1_9"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/box_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="kinoko name"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toStartOf="@+id/box_remove_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/box_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bin_button_background_selector"
        app:layout_constraintBottom_toBottomOf="@+id/box_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box_name"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/box_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="url"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/box_name"
        app:layout_constraintStart_toStartOf="@+id/box_name"
        app:layout_constraintTop_toBottomOf="@+id/box_name" />
</androidx.constraintlayout.widget.ConstraintLayout>