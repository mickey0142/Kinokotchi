<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Data to make available to the XML via data binding. In this case,
         the whole ViewModel, so that we can access the LiveData,
         click handlers, and state variables. -->
    <data>
        <variable
            name="viewModel"
            type="com.kinokotchi.game.GameViewModel" />
    </data>

    <!-- Start of the visible fragment layout using ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_top_panel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gray_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/game_light_box"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/background_light"
                android:foreground="@drawable/box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/game_water_box"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/game_light_level"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_green_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/game_water_box"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/background_light"
                android:foreground="@drawable/box"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/game_water_level2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/holo_orange_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/game_temperature_box"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/background_light"
                android:foreground="@drawable/box"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/game_water_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/game_temperature_level"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/holo_red_light"
                    android:padding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias=" 0.5"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/game_temperature_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/game_temperature_box"
                app:layout_constraintEnd_toEndOf="@+id/game_temperature_box"
                app:layout_constraintStart_toStartOf="@+id/game_temperature_box"
                app:layout_constraintTop_toTopOf="@+id/game_temperature_box"
                app:srcCompat="@drawable/thermometer" />

            <ImageView
                android:id="@+id/game_water_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/game_water_box"
                app:layout_constraintEnd_toEndOf="@+id/game_water_box"
                app:layout_constraintStart_toStartOf="@+id/game_water_box"
                app:layout_constraintTop_toTopOf="@+id/game_water_box"
                app:srcCompat="@drawable/moisture" />

            <ImageView
                android:id="@+id/game_light_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/game_light_box"
                app:layout_constraintEnd_toEndOf="@+id/game_light_box"
                app:layout_constraintStart_toStartOf="@+id/game_light_box"
                app:layout_constraintTop_toTopOf="@+id/game_light_box"
                app:srcCompat="@drawable/light" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gray_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/green_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:background="@drawable/button_background_selector"
                android:onClick="@{() -> viewModel.getGreen()}"
                android:text="green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/red_button"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/red_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:background="@drawable/button_background_selector"
                android:onClick="@{() -> viewModel.getRed()}"
                android:text="red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.442" />

            <Button
                android:id="@+id/temp_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_selector"
                android:text="temp reset"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/green_button"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_disconnect_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="97dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/game_bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_top_panel">

            <TextView
                android:id="@+id/game_disconnect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_connect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/game_reconnect_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/game_disconnect_text" />

            <Button
                android:id="@+id/game_reconnect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/ic_no_connection"
                android:text="@string/reconnect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/game_reconnect_progress" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/led_green_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{String.valueOf(viewModel.greenStatus.green)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_top_panel" />
        <!--@{viewModel.greenStatus.LEDState}-->
        <TextView
            android:id="@+id/led_red_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:text="@{String.valueOf(viewModel.isConnected())}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/led_green_text" />
        <!--@{viewModel.redStatus.LEDState}-->

        <TextView
            android:id="@+id/game_mushroom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/game_kinoko"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_top_panel"
            tools:text="mushroom name here" />

        <ImageView
            android:id="@+id/game_kinoko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kurumi"
            app:layout_constraintBottom_toTopOf="@+id/game_bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_top_panel"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_water_level_box"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/background_light"
            android:foreground="@drawable/box_9"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/game_bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_top_panel">

            <ImageView
                android:id="@+id/game_water_level"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/holo_blue_bright"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/game_water_level_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/white_box"
            app:layout_constraintEnd_toEndOf="@+id/game_water_level_box"
            app:layout_constraintStart_toStartOf="@+id/game_water_level_box"
            app:layout_constraintTop_toBottomOf="@+id/game_water_level_box"
            app:srcCompat="@drawable/droplet" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
