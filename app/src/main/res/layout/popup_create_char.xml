<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_box_9"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/popup_create_char_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="mushroom name can't be empty" />

    <Button
        android:id="@+id/popup_create_char_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/long_button_background_selector"
        android:text="close" />

</LinearLayout>